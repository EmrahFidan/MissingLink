# MissingLink Production Environment Configuration
# Faz 4.2: Production Deployment

# Application
APP_NAME=MissingLink
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security
SECRET_KEY=your-production-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=csv

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CTGAN Model Configuration
MODEL_DIR=models
UPLOAD_DIR=uploads
OUTPUT_DIR=uploads/outputs

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring
FLOWER_PORT=5555
FLOWER_URL_PREFIX=flower
